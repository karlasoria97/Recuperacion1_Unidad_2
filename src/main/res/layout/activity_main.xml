        android:textColor="#3ac999"
        android:id="@+id/textView1"
        android:layout_alignParentTop="true" />

    <Button
        android:text="Seleccionar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_ecu1"
        android:onClick="iniciarEcuacion1"
        android:layout_below="@+id/btn_ecua1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="30dp"/>

    <TextView
        android:text="Segunda ecuación: (√x + 2√y)²"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="110dp"
        android:textColor="#3ac999"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true" />


    <Button
        android:text="Seleccionar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_ecu2"
        android:onClick="iniciarEcuacion2"
        android:layout_below="@+id/btn_ecua2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="110dp"/>

    <TextView
        android:text="Tercera ecuación: t³+2t²-3t+1/t√t"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="190dp"
        android:textColor="#3ac999"
        android:id="@+id/textView3"
        android:layout_alignParentTop="true" />


    <Button
        android:text="Seleccionar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_ecu3"
        android:onClick="iniciarEcuacion3"
        android:layout_below="@+id/btn_ecua3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="190dp"/>




</RelativeLayout>
